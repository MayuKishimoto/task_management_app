<h1>ユーザー一覧</h1>
<p><%= notice %></p>
<%= link_to '新規作成', new_admin_user_path, class: "btn btn-primary" %>
<table>
  <tr>
    <th>ユーザー名</th>
    <th>メールアドレス</th>
    <th>管理権限</th>
    <th>登録日時</th>
    <th>更新日時</th>
    <th>タスク数</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, [:admin, user]%></td>
      <td><%= user.email %></td>
      <td><%= user.admin? ? 'あり' : 'なし' %></td>
      <td><%= user.created_at.strftime('%Y-%m-%d') %></td>
      <td><%= user.updated_at.strftime('%Y-%m-%d') %></td>
      <td><%= user.tasks.count %>件</td>
      <td><%= link_to '編集', edit_admin_user_path(user), class: "btn btn-outline-success" %></td>
      <td><%= link_to '削除', [:admin, user], method: :delete ,data: { confirm: 'ユーザー「#{user.name}」を削除します。よろしいですか？」' }, class: "btn btn-outline-danger" %></td>
    </tr>
  <% end %>
</table>

