<h1>タスク一覧</h1>
<p><%= notice %></p>
<%= form_with( url: tasks_path, method: :get, scope: :task, local: true ) do |form| %>
  <%= form.label :title, "タスク名" %>
  <%= form.text_field :title %>
  <%= form.label :status, "ステータス" %>
  <%= form.select :status, Task.statuses.keys, include_blank: true %>
  <%= form.submit "検索" %>
<% end %>
<table>
  <tr>
    <th>タスク名</th>
    <th>詳しい内容</th>
    <th>登録日時</th>
    <th><%= link_to "終了期限", tasks_path(sort_expired: "true") %></th>
    <th>ステータス</th>
    <th>優先順位</th>
  </tr>
  <% @tasks.each do |task| %>
    <tr class="task_row">
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= task.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
      <td><%= task.expired_at.strftime('%Y-%m-%d') %></td>
      <td><%= task.status %></td>
      <td><%= task.priority %></td>
      <td><%= link_to '詳細', task_path(task.id) %></td>
      <td><%= link_to '編集', edit_task_path(task.id) %></td>
      <td><%= link_to '削除', task_path(task.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to '新規作成', new_task_path %>